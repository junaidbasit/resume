extends layout
block content

  include mixins/renderResumeSection.jade

  header.hero
    .row
      .span12.center
        h1.display-name
          strong= settings.displayName
        span
          address
            a(href=+settings.homepage)= settings.homepage
            br
            a(href="mailto:"+settings.email)= settings.email
            br
            p= settings.phone
  for sec in sections
    //- render sections
    +renderResumeSection(sec)
